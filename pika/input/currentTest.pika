exec {
	var i := 1.
	const numFactorials := 11.
	var sum := 0.
	
	while (i < numFactorials) {
		# compute the factorial of i
		var j := 1.
		var factorial := 1.
		
		while (j <= i) {
			factorial := factorial * j.
			j := j + 1.
		}
		
		# ... and add it to sum
		sum := sum + factorial.
		
		print "sum of first "; i; " factorials is "; sum, _n_.
		i := i + 1.
	}
	
	print "done", _n_.
}